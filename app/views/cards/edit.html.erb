
<div class="container">

  <div class="row my-4">
    <div class="col-7 mx-auto p-4 bg-light rounded shadow">
   
      <%if current_user and current_user.admin %>


        <%= form_with(model: @card, local: true) do |form| %>
     
          <h2 class="text-center"><b>Edit Card</b></h2>

          <!-- Display errors if any -->
          <% if @card.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <% @card.errors.full_messages.each do |message| %>
                <i class="fa fa-times-circle"></i> <%= message %><br>
              <% end %>
            </div>
          <% end %>

          <div class="field">
            <%= form.text_field :title, class:"form-control my-2", placeholder:"Card Title" %>
          </div>

          <div class="field">
            <%= form.text_area :text, class:"form-control my-2", placeholder:"Description" %>
          </div>

          <div class="field">
            <%= form.text_field :collection, class:"form-control my-2", placeholder:"Collection" %>
          </div>
          
          <div class="field">
            <%= form.text_field :set, class:"form-control my-2", placeholder:"Set" %>
          </div>
      
          <div class="field">
            <%= form.text_field :imageurl, class:"form-control my-2", placeholder:"Image URL" %>
          </div>
            
          <div class="field">
            <%= form.submit "Update Card", class:"btn btn-primary w-100 my-3" %>
          </div>
     
        <% end %>

        <%else%>
          <div class="text-center">
              Access denied. To request an edit, please contact an administrator.
          </div>
          <h2 class="display-1 text-dark text-center">:-(</h2>
        <%end%>

    </div>
  </div>

</div>