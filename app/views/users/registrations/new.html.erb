
<div class="container">

  <div class="row my-4">
    <div class="col-6 mx-auto p-4 bg-light shadow rounded">

      <h2 class="text-center mb-2"><b>Sign-Up</b></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <!-- Display errors if any -->
        <% if @user.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <% @user.errors.full_messages.each do |message| %>
              <i class="fa fa-times-circle"></i> <%= message %><br>
            <% end %>
          </div>
        <% end %>
        <!--<%= render "devise/shared/error_messages", resource: resource %>-->

        <div class="row">
          <div class="col-6">
            <%= f.text_field :fname, autofocus: true, class:"form-control my-2", placeholder:"First Name" %>
          </div>
          <div class="col-6">
            <%= f.text_field :lname, autofocus: true, class:"form-control my-2", placeholder:"Last Name" %>
          </div>
        </div>

        <div class="field">
          <%= f.text_field :username, autofocus: true, class:"form-control my-2", placeholder:"Username" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control my-2", placeholder:"Email Address" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control my-2", placeholder:"Password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control my-2", placeholder:"Confirm Password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-primary w-100 my-3" %>
        </div>
      <% end %>

    </div>
  </div>
</div>