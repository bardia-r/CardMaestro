<div class="container">

  <div class="row my-4">
    <div class="col-6 mx-auto p-4 bg-light rounded">

      <%= form_with scope: :personalcards, url: users_personalcards_index_path, local: true do |form| %>
        <h2 class="text-center">New Collection</h2>

        <div class="field">
          <%= form.text_field :title, class:"form-control my-2", placeholder:"Name of Collection" %>
        </div>

        <div class="field">
          <%= form.submit "Create", class:"btn btn-primary w-100 my-3" %>
        </div>

      <% end %>

      <%= link_to 'Back', :back %>

    </div>
  </div>
</div>