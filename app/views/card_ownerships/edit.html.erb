
<div class="container">

  <div class="row my-4">
    <div class="col-6 mx-auto p-4 bg-light rounded shadow">
		<h1>Ownership For <b><%=@card.title.upcase%></b></h1>
		<hr>
			<%= form_with model: @card_ownership, local: true do |form| %>

	        <!-- Display errors if any -->
	        <% if @card_ownership.errors.any? %>
	          <div class="alert alert-danger" role="alert">
	            <% @card_ownership.errors.full_messages.each do |message| %>
	              <i class="fa fa-times-circle"></i> <%= message %><br>
	            <% end %>
	          </div>
	        <% end %>
			
        	<div class="field my-2">
			    <%= form.label 'Number Of Cards' %>
			    <%= form.number_field :count, value: @card_ownership.count, class:"form-control" %>
			</div>
        	<div class="field my-2">
	        	<%= form.check_box :private, value: @card_ownership.private %>
				Private (Other users will not be able to view this card)
			</div>
        	<div class="field my-2">
	        	<%= form.check_box :sell, value: @card_ownership.sell %>
	        	List For Sale
			</div>
			    <%= form.hidden_field :card_id, value: @card.id %>
		 
        	<div class="field mt-2">
			    <%= form.submit "Save", class:"btn btn-primary w-100 my-3" %>
			</div>

		<% end %>

    </div>
  </div>
</div>